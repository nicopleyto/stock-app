<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="card mx-auto mt-5 responsive-request">
  <div class="card-header d-flex justify-content-evenly">
    <h4>Requests</h4>
    
    <%= link_to "Declined",  declined_requests_path, class:"btn btn-info position-absolute top-1 end-0 mx-4 "%>
 
  </div>
  <ul class="list-group list-group-flush overflow-auto container" style="min-height: 20rem; max-height: 35rem;">
    <% if @request.empty? %>
      <h4 class="text-center mt-5 text-secondary">There is currently no request yet.</h4>
    <% end %>
    <% @request.each do |request| %>
      <li class="list-group-item d-flex justify-content-between p-3 row">
      
          <%= link_to  request.email, user_path(request), class: "btn btn-outline-light text-dark col"%>
          <span class="ms-2 col">
            <%=  request.state %> 
            <%=  request.role %> 
          </span>
          
          
          <div class="text-center btn-group col">

            <%= link_to "Decline", pending_request_path(request, state: "Declined"), method: :patch, class: "btn btn-danger mx-2" %>

            <%= link_to "Approve", pending_request_path(request, state: "Approved"), method: :patch, class: "btn btn-success mx-2" %>
            
          </div>
      </li>
    <% end %>
  </ul>
</div>