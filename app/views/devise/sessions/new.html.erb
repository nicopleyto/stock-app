<div class = "container">
  <div class = "row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card rounded-3 mt-5">
        <div class="card-body p-4 p-sm-5">

          <h5 class="card-title text-center mb-3 fw-light fs-4">Sign In</h5>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="field form-group mb-3">
                <%= f.label :email, :class => "form-label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "name@example.com" %>
              </div>

              <div class="field form-group mb-3">
                <%= f.label :password, :class => "form-label" %><br />
                <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", :placeholder => "********" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field form-check mb-3">
                  <%= f.check_box :remember_me, :class => "form-check-input" %>
                  <%= f.label :remember_me, :class => "form-check-label" %>
                </div>
              <% end %>

              <div class="actions d-grid mb-3">
                <%= f.submit "Sign in", :class => "btn btn-primary btn-login text-uppercase fw-bold"  %>
              </div>

            <% end %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="text-center"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
            <% end %>

        </div>
      </div>

      <div class="card rounded-3 my-3 mb-5">
        <div class="card-body p-2 p-sm-3">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <div class="text-center">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %><br /></div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
